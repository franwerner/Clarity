generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "mysql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

enum Strategy {
  google
}

model User {
  id           Int            @id @default(autoincrement())
  createdAt    DateTime       @default(now())
  email        String         @unique
  name         String
  lastname     String
  avatarUrl    String
  userStrategy UserStrategy[]
}

model UserStrategy {
  id         Int      @id @default(autoincrement())
  strategy   Strategy
  strategyId String
  userFk     Int
  user       User     @relation(fields: [userFk], references: [id])

  @@unique([strategy, strategyId])
}
